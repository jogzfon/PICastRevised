<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- Change the color to your desired pressed state color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800" /> <!-- Change the color to your desired default state color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
