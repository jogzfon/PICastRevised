<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8282FA"
    tools:context=".ProductView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="@drawable/round_featured"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Add your views and widgets here -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/button"
                android:layout_width="177dp"
                android:layout_height="59dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="680dp"
                android:text="Buy Now" />

            <ImageView
                android:id="@+id/artImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:backgroundTint="#56FEFEFE"
                android:contentDescription="Sung Jin Woo"
                app:srcCompat="@drawable/sung" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/baloo_bhaina"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="350dp"
                android:fontFamily="@font/baloo_bhaina"
                android:text="PRICE"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="400dp"
                android:fontFamily="@font/baloo_bhaina"
                android:text="Description"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="450dp"
                android:fontFamily="sans-serif-medium"
                android:text="This is a description"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="530dp"
                android:fontFamily="@font/baloo_bhaina"
                android:text="Type"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="530dp"
                android:fontFamily="@font/baloo_bhaina"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="570dp"
                android:fontFamily="sans-serif-medium"
                android:text="PNG"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="400dp"
                android:fontFamily="@font/baloo_bhaina"
                android:text="Author"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="600dp"
                android:fontFamily="@font/baloo_bhaina"
                android:text="Picture Format"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="640dp"
                android:fontFamily="sans-serif-medium"
                android:text="PNG"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="430dp"
                app:srcCompat="@drawable/account" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>