<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7B7BEF"
    tools:context=".Registration"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-58dp">

    <EditText
        android:id="@+id/editTextCreateUsername"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="enter your username..."
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColor="#757575"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextCreateEmail"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="name@email.com"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="#757575"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="153dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/baloo_bhaina"
        android:text="E-mail address"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextCreateEmail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="209dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/baloo_bhaina"
        android:text="Enter your password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextCreatePassword"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="209dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/baloo_bhaina"
        android:text="Confirm Password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextConfirmPassword"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/baloo_bhaina"
        android:text="Region:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister_CreateAccount"
        app:layout_constraintEnd_toStartOf="@+id/spinRegion" />

    <EditText
        android:id="@+id/editTextCreatePassword"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="at least 6 characters"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="#757575"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="●●●●●●●●"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="#757575"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister_CreateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/baloo_bhaina"
        android:text="Sign-up"
        android:textColor="#F6F2F2"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="258dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/baloo_bhaina"
        android:text="Create your username"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextCreateUsername"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRegister_CreateAccount"
        android:layout_width="277dp"
        android:layout_height="58dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/baloo_bhaina"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="#5FA8FE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinRegion"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>